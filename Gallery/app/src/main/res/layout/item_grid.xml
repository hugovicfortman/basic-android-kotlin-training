<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/file_thumbnail_image"
            android:src="@drawable/image1"
            android:scaleType="fitXY"
            android:importantForAccessibility="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:columnCount="3">
            <ImageView
                android:id="@+id/file_type_icon_image"
                android:src="@drawable/ic_file_type_image"
                android:contentDescription="@string/file_type_description_photo"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_rowSpan="2"
                android:layout_row="0"
                android:layout_column="0"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/file_name_text"
                android:text="sunset_at_a_beach.jpeg"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="@dimen/card_text_margin"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/file_size_text"
                android:text="5.5 MB"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_marginStart="@dimen/card_text_margin" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/file_created_date_text"
                android:text="Aug 13"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="end|center"
                android:layout_marginStart="@dimen/card_text_margin" />
        </GridLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>